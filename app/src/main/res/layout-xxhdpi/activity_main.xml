<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.kichukkhon.calculator.MainActivity"
    android:weightSum="2.5">

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="25sp"
        android:background="@drawable/border"
        android:gravity="end"
        android:padding="5dp"
        android:text="0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="63dp"
                android:layout_marginLeft="4dp"
                android:text="@string/cancel"
                android:textSize="35sp"
                android:layout_weight="2"
                android:padding="10dp"
                android:onClick="btnCancelClick"/>



            <Button
                android:id="@+id/btnPower"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/power"
                android:textSize="50sp"
                android:padding="5dp"
                android:layout_weight="1"
                android:onClick="btnPowerClick"/>

            <Button
                android:id="@+id/btnSqr"
                android:layout_width="0dp"
                android:layout_height="63dp"
                android:layout_gravity="right"
                android:text="x²"
                android:textSize="35sp"
                android:layout_weight="1"
                android:onClick="btnSqrClick"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnPercentage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="@string/parcent"
                android:textSize="45sp"
                android:layout_weight="1"
                android:onClick="btnPercentClick"/>

            <Button
                android:id="@+id/btnSign"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/signChange"
                android:textSize="45sp"
                android:layout_weight="1"
                android:onClick="btnSignClick"/>

            <Button
                android:id="@+id/btnSqrt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sqrt"
                android:textSize="45sp"
                android:layout_weight="1"
                android:onClick="btnSqrtClick"/>

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="÷"
                android:textSize="45sp"
                android:layout_weight="1"
                android:onClick="btnDivClick"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnSeven"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="@string/seven"
                android:textSize="45sp"
                android:layout_weight="1"
                android:onClick="btn7Click"/>

            <Button
                android:id="@+id/btnEight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/eight"
                android:textSize="45sp"
                android:layout_weight="1"
                android:onClick="btn8Click"/>

            <Button
                android:id="@+id/btnNine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/nine"
                android:textSize="45sp"
                android:layout_weight="1"
                android:onClick="btn9Click"/>

            <Button
                android:id="@+id/btnMulti"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/multi"
                android:textSize="45sp"
                android:layout_weight="1"
                android:onClick="btnMultiClick"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnFour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="@string/four"
                android:textSize="45sp"
                android:layout_weight="1"
                android:onClick="btn4Click"/>

            <Button
                android:id="@+id/btnFive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/five"
                android:textSize="45sp"
                android:layout_weight="1"
                android:onClick="btn5Click"/>

            <Button
                android:id="@+id/btnSix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/six"
                android:textSize="45sp"
                android:layout_weight="1"
                android:onClick="btn6Click"/>

            <Button
                android:id="@+id/btnSub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/sub"
                android:textSize="45sp"
                android:layout_weight="1"
                android:onClick="btnSubClick"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnOne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="@string/one"
                android:textSize="45sp"
                android:layout_weight="1"
                android:onClick="btn1Click"/>

            <Button
                android:id="@+id/btnTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/two"
                android:textSize="45sp"
                android:layout_weight="1"
                android:onClick="btn2Click"/>

            <Button
                android:id="@+id/btnThree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/three"
                android:textSize="45sp"
                android:layout_weight="1"
                android:onClick="btn3Click"/>

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/plus"
                android:textSize="45sp"
                android:layout_weight="1"
                android:onClick="btnPlusClick"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnZero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="@string/zero"
                android:textSize="45sp"
                android:layout_weight="1"
                android:onClick="btn0Click"/>

            <Button
                android:id="@+id/btnPoint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/point"
                android:textSize="45sp"
                android:layout_weight="1"
                android:onClick="btnPointClick"/>

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/equals"
                android:textSize="45sp"
                android:layout_weight="2"
                android:onClick="btnEqlClick"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
